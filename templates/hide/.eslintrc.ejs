{
  "extends": [
    "airbnb-base",
    "eslint:recommended"<% if(flow){ %>,
    "plugin:flowtype/recommended"<% } %>
  ],
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {
    "no-var": "error",
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "arrow-body-style": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "no-unused-vars": ["error", { "args": "none" }],
    "no-console": 0
  }<% if(devDepen.some((dev) => { return dev.pkg === 'react'})){ %>,
  "overrides": [
    {
      "files": [ "src/*.js", "src/*.jsx" ],
      "env": {
        "browser": true
      }
    }
  ]<% } %>
}