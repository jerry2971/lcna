{
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "node": true,
    "jest": true
  },
  "rules": {
    "no-var": "error",
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "arrow-body-style": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "no-console": 0
  }
}
